<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PTSuryaSafetyNusantara" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextView.Default.Style</item>
    </style>

    <style name="TextView.Default.Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.PTSuryaSafetyNusantara.Splash" parent="Theme.PTSuryaSafetyNusantara">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_app_icon</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.PTSuryaSafetyNusantara</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="minWidth">100dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="minHeight">60dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="Theme.Button.Primary" parent="Theme.Button">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Button.Secondary" parent="Theme.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.CardView.Secondary" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/light_gray</item>
    </style>

</resources>